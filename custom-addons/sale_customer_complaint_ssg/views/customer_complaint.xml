<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="customer_complaint_form_view" model="ir.ui.view">
		<field name="name">sale_customer_complaint_ssg.customercomplaint.form</field>
		<field name="model">sale_customer_complaint_ssg.customercomplaint</field>
		<field name="arch" type="xml">
		<form>
			<sheet>
				<group>
					<group>
						<field name="customer"/>
					</group>
					<group>
						<field name="emailAddress"/>
					</group>
					<group>
						<field name="jobNumber" options="{'no_create': True, 'no_create_edit':True}"/>
					</group>
					<group>
						<field name="complaintDate"/>
					</group>
					<group>
						<field name="complaintReason"/>
					</group>
					<group>
						<field name="notes"/>
					</group>
				</group>
			</sheet>
		</form>
		</field>
	</record>
	<record id="customer_complaint_tree_view" model="ir.ui.view">
		<field name="name">sale_customer_complaint_ssg.customercomplaint.form</field>
		<field name="model">sale_customer_complaint_ssg.customercomplaint</field>
		<field name="arch" type="xml">
			<tree>
				<field name="customer"/>
				<field name="emailAddress"/>
				<field name="jobNumber"/>
				<field name="complaintDate"/>
				<field name="complaintReason"/>
				<field name="notes"/>
			</tree>
		</field>
	</record>
	<record id="customer_complaint_action" model="ir.actions.act_window">
		<field name="name">Customer Complaints</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">sale_customer_complaint_ssg.customercomplaint</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_empty_folder">
				Capture Customers Complaints
			</p>
		</field>
	</record>
	<menuitem id="customer_complaint_menu" parent="sale.sale_order_menu" action="customer_complaint_action" sequence="5"/>
	<!-- Below Menu should be enabled only for Production-->
	<!--<menuitem id="pp_customer_complaint_menu" parent="projects_plus.projects_plus_order_menu" action="customer_complaint_action" sequence="7"/>-->
</odoo>